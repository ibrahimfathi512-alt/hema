        .sidebar h2 { color: var(--primary); text-align: center; margin-bottom: 30px; text-shadow: 0 0 20px rgba(255,94,0,0.3); font-size: 1.5rem; }

        .nav-item {
            color: #94a3b8;
            text-decoration: none;
            padding: 12px 18px;
            border-radius: 12px;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: 0.3s ease;
            white-space: nowrap;
        }

        .nav-item:hover, .nav-item.active { background: rgba(255, 94, 0, 0.1); color: var(--primary); transform: translateX(-5px); }

        /* Main Content Area Responsive */
