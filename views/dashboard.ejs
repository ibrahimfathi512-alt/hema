        .welcome-card {
            background: linear-gradient(135deg, rgba(255,94,0,0.1) 0%, rgba(15, 23, 42, 0) 100%);
            border: 1px solid var(--glass-border);
            padding: 25px;
            border-radius: 24px;
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
