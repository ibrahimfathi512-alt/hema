            margin-right: var(--sidebar-width); 
            flex: 1; 
            padding: 20px; 
            width: calc(100% - var(--sidebar-width));
            transition: all 0.3s ease;
        }

        /* Mobile Adjustments */
        @media (max-width: 992px) {
            .sidebar {
                transform: translateX(100%); /* Hide sidebar on mobile by default */
            }
            .sidebar.active {
                transform: translateX(0);
            }
            .main-content {
                margin-right: 0;
                width: 100%;
                padding: 15px;
            }
            .welcome-card {
                flex-direction: column;
                text-align: center;
                gap: 20px;
            }
            .welcome-card div {
                text-align: center !important;
            }
            .clock { font-size: 1.8rem; }
        }

        /* Menu Button for Mobile */
        .mobile-nav-toggle {
            display: none;
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: var(--primary);
            color: white;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            justify-content: center;
            align-items: center;
            z-index: 2000;
            box-shadow: 0 4px 15px rgba(255, 94, 0, 0.4);
            cursor: pointer;
        }
        
        @media (max-width: 992px) {
