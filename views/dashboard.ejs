        .clock { font-size: 2.2rem; font-weight: 800; color: #fff; }
        .date { color: var(--primary); font-weight: 600; margin-top: 5px; }

        .smart-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(140px, 1fr)); gap: 15px; margin-bottom: 30px; }
        .stat-card {
            background: var(--glass);
            border: 1px solid var(--glass-border);
            padding: 20px;
            border-radius: 20px;
            text-align: center;
            transition: 0.4s;
            cursor: pointer;
        }
        .stat-card h2 { font-size: 1.8rem; margin: 10px 0; font-weight: 800; }
        
        .chart-container { background: var(--glass); border: 1px solid var(--glass-border); padding: 15px; border-radius: 24px; height: 300px; }

        .search-input {
            width: 100%; padding: 12px 45px 12px 15px; border-radius: 12px;
            border: 1px solid var(--glass-border); background: var(--glass);
            color: white; font-size: 0.9rem; box-sizing: border-box;
        }

        /* Table Responsive */
