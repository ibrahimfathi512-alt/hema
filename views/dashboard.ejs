        th { background: rgba(255,255,255,0.05); padding: 15px; font-size: 0.8rem; color: #f8fafc; }
        td { padding: 12px; text-align: center; border-bottom: 1px solid rgba(255,255,255,0.02); font-size: 0.85rem; }

        #toast-alert {
