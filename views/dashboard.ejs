                let valB = isNaN(cellB) ? cellB.toLowerCase() : parseFloat(cellB);
                if (valA < valB) return isAscending ? -1 : 1;
                if (valA > valB) return isAscending ? 1 : -1;
                return 0;
            });
            rows.forEach(row => tbody.appendChild(row));
        }

        function filterTable(type) {
            const rows = document.querySelectorAll('#tbl tbody tr');
            rows.forEach(row => {
                const w = parseFloat(row.dataset.wallet) || 0;
                const s = parseFloat(row.dataset.shifts) || 0;
                if(type === 'all') row.style.display = '';
                else if(type === 'hasShift') row.style.display = s > 0 ? '' : 'none';
                else if(type === 'noShift') row.style.display = s === 0 ? '' : 'none';
                else if(type === 'highWallet') row.style.display = w > 1000 ? '' : 'none';
            });
        }

