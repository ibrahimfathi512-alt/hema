<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Office Wallets | Tanta Car Elite</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700;900&display=swap" rel="stylesheet">
    <style>
        :root {
            --accent-purple: #6c5ce7;
            --main-dark: #09090b;
            --card-bg: rgba(23, 23, 26, 0.9); /* تعميق الخلفية قليلاً */
            --border-color: rgba(255, 255, 255, 0.08);
            --text-muted: #a1a1aa;
            --danger: #ef4444;
            --input-focus-bg: rgba(108, 92, 231, 0.05);
        }

        body {
            background-color: var(--main-dark);
            background-image: radial-gradient(circle at 100% 0%, rgba(108, 92, 231, 0.07) 0%, transparent 50%);
            color: #fff;
            font-family: 'Cairo', sans-serif;
            margin: 0;
            padding: 25px;
            min-height: 100vh;
        }

        /* Nav Header */
        .nav-header {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--border-color);
            padding: 20px 35px;
            border-radius: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .nav-header h2 { margin: 0; font-size: 22px; font-weight: 800; }
        .nav-header h2 i { color: var(--accent-purple); margin-left: 10px; }

        .back-btn {
            text-decoration: none;
            color: var(--accent-purple);
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: 0.3s;
        }

        /* Smart Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 20px;
            margin-bottom: 25px;
        }

        .stat-card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            padding: 22px;
            border-radius: 20px;
            position: relative;
            overflow: hidden;
        }

        .stat-card h4 { color: var(--text-muted); margin: 0; font-size: 13px; text-transform: uppercase; }
        .stat-card h2 { margin: 12px 0 0 0; font-size: 28px; font-weight: 900; }
        .stat-card i {
            position: absolute; left: 20px; bottom: 20px;
            font-size: 35px; opacity: 0.1; color: var(--accent-purple);
        }

        /* Controls Section */
        .controls-card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            padding: 20px;
            border-radius: 20px;
            margin-bottom: 25px;
        }

        .grid-layout { display: grid; grid-template-columns: 2fr 1fr; gap: 20px; }
        .input-wrapper { position: relative; }
        .input-wrapper i { position: absolute; right: 18px; top: 50%; transform: translateY(-50%); color: var(--accent-purple); z-index: 2; }

        /* تعديل ألوان الإدخال والقائمة المنسدلة */
        input, select {
            width: 100%; height: 52px;
            background: #18181b; /* لون داكن جداً بدلاً من الشفاف */
            border: 1px solid var(--border-color);
            border-radius: 12px; padding: 0 45px 0 15px;
            color: #f4f4f5; outline: none; transition: 0.3s;
            appearance: none; /* لإزالة شكل السهم الافتراضي في بعض المتصفحات */
        }

        /* تعديل شكل الخيارات داخل القائمة */
        select option {
            background: #18181b;
            color: #fff;
            padding: 10px;
        }

        input:focus, select:focus { 
            border-color: var(--accent-purple); 
            background: var(--input-focus-bg); 
            box-shadow: 0 0 15px rgba(108, 92, 231, 0.2);
        }

        /* Table Design */
        .table-wrapper {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        }

        table { width: 100%; border-collapse: collapse; }
        th {
            background: rgba(255,255,255,0.03);
            color: var(--text-muted);
            padding: 18px; font-size: 13px;
            text-align: center; border-bottom: 1px solid var(--border-color);
        }

        td {
            padding: 15px; text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.02);
            font-weight: 600; font-size: 14px;
        }

        /* Wallet Highlight */
        .wallet-amount { color: var(--danger); font-family: monospace; font-size: 16px; }
        .id-badge { color: var(--accent-purple); background: rgba(108, 92, 231, 0.1); padding: 4px 10px; border-radius: 8px; }

        .hidden { display: none !important; }
        #noResults { padding: 50px; text-align: center; color: var(--text-muted); display: none; }

        @media (max-width: 768px) {
            .grid-layout { grid-template-columns: 1fr; }
            .nav-header { flex-direction: column; text-align: center; gap: 15px; }
        }
    </style>
</head>
<body>

    <div class="nav-header">
        <h2><i class="fa-solid fa-wallet"></i> مديونيات المكتب - <%= zone %></h2>
        <a href="/dashboard" class="back-btn">
            العودة للرئيسية
            <i class="fa-solid fa-house"></i>
        </a>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <h4>إجمالي مديونية الزون</h4>
            <h2 id="totalDebt">جاري الحساب...</h2>
            <i class="fa-solid fa-money-bill-trend-up"></i>
        </div>
        <div class="stat-card">
            <h4>عدد المحافظ النشطة</h4>
            <h2><%= wallets.length %> <span style="font-size: 14px; color: var(--text-muted);">محفظة</span></h2>
            <i class="fa-solid fa-users-viewfinder"></i>
        </div>
        <div class="stat-card">
            <h4>تاريخ كشف المديونية</h4>
            <h2 style="font-size: 20px;"><%= wallets.length > 0 ? wallets[0].Date : '---' %></h2>
            <i class="fa-solid fa-calendar-check"></i>
        </div>
    </div>

    <div class="controls-card">
        <div class="grid-layout">
            <div class="input-wrapper">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" id="searchInput" placeholder="بحث باسم المندوب أو الكود...">
            </div>
            <div class="input-wrapper">
                <i class="fa-solid fa-filter"></i>
                <select id="dateSelect" onchange="applyFilters()">
                    <option value="">جميع التواريخ</option>
                    <% let uniqueDates = [...new Set(wallets.map(w => w.Date))].filter(d => d && d !== '0');
                       uniqueDates.forEach(date => { %>
                        <option value="<%= date %>"><%= date %></option>
                    <% }) %>
                </select>
            </div>
        </div>
    </div>

    <div class="table-wrapper">
        <table id="walletTable">
            <thead>
                <tr><% headers.forEach(h => { %> <th><%= h %></th> <% }) %></tr>
            </thead>
            <tbody id="tableBody">
                <% wallets.forEach(row => { %>
                <tr class="data-row">
                    <% headers.forEach(h => { 
                        let val = row[h] || '0';
                        let isWallet = (h === 'المحفظه' || h.includes('مديونية'));
                        let isID = (h.includes('كود') || h === 'id');
                    %>
                    <td class="cell-<%= h %> <%= isWallet ? 'wallet-amount' : '' %>">
                        <% if(isID) { %>
                            <span class="id-badge"><%= val %></span>
                        <% } else { %>
                            <%= val %>
                        <% } %>
                    </td>
                    <% }) %>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <div id="noResults">
            <i class="fa-solid fa-face-frown" style="font-size: 40px; display: block; margin-bottom: 15px; opacity: 0.3;"></i>
            لا توجد بيانات مطابقة لهذا البحث
        </div>
    </div>

    <script>
        const searchInput = document.getElementById('searchInput');
        const dateSelect = document.getElementById('dateSelect');
        const rows = Array.from(document.getElementsByClassName('data-row'));
        const noResults = document.getElementById('noResults');

        function applyFilters() {
            const searchTerm = searchInput.value.toLowerCase().trim();
            const selectedDate = dateSelect.value.trim();
            let visibleCount = 0;

            window.requestAnimationFrame(() => {
                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    const dateCell = row.querySelector('.cell-Date') ? row.querySelector('.cell-Date').textContent.trim() : ""; 

                    const matchesSearch = searchTerm === "" || text.includes(searchTerm);
                    const matchesDate = selectedDate === "" || dateCell === selectedDate;

                    if (matchesSearch && matchesDate) {
                        row.classList.remove('hidden');
                        visibleCount++;
                    } else {
                        row.classList.add('hidden');
                    }
                });
                
                noResults.style.display = visibleCount === 0 ? "block" : "none";
            });
        }

        function calculateTotal() {
            let total = 0;
            rows.forEach(row => {
                const amountCell = row.querySelector('.wallet-amount');
                if(amountCell) {
                    const val = parseFloat(amountCell.textContent.replace(/,/g, '')) || 0;
                    total += val;
                }
            });
            document.getElementById('totalDebt').innerText = total.toLocaleString('ar-EG') + ' ج.م';
        }

        let timeout = null;
        searchInput.addEventListener('input', () => {
            clearTimeout(timeout);
            timeout = setTimeout(applyFilters, 250);
        });

        window.onload = calculateTotal;
    </script>
</body>
</html>