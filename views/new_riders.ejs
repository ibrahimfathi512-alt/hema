    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700;900&display=swap" rel="stylesheet">
    <style>
        :root {
            --tanta-orange: #ff5e00;
            --main-dark: #09090b;
            --card-bg: rgba(23, 23, 26, 0.8);
            --border-color: rgba(255, 255, 255, 0.08);
            --success: #22c55e;
            --danger: #ef4444;
            --text-muted: #a1a1aa;
        }

        body {
            background-color: var(--main-dark);
            background-image: radial-gradient(circle at 50% 50%, rgba(255, 94, 0, 0.03) 0%, transparent 100%);
            color: #fff;
            font-family: 'Cairo', sans-serif;
            margin: 0;
            padding: 30px;
            min-height: 100vh;
        }

        /* Nav Header */
        .nav-header {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--border-color);
            padding: 20px 35px;
            border-radius: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        }

        .nav-header h2 { margin: 0; font-size: 22px; font-weight: 800; }
        .back-btn {
            text-decoration: none;
            color: var(--tanta-orange);
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: 0.3s;
        }

        /* Top Grid - Stats & Circle Progress */
        .main-stats-container {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
        }

        .card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            padding: 25px;
            border-radius: 24px;
            text-align: center;
            transition: 0.4s;
            position: relative;
            overflow: hidden;
        }

        .card:hover { border-color: var(--tanta-orange); transform: translateY(-5px); }
        .card h3 { color: var(--text-muted); font-size: 14px; margin: 0; text-transform: uppercase; }
        .card h2 { font-size: 35px; margin: 15px 0 0 0; font-weight: 900; }

        /* Percentage Card */
        .percentage-card {
            background: linear-gradient(145deg, rgba(255, 94, 0, 0.1), rgba(9, 9, 11, 0.5));
            border: 1px solid var(--tanta-orange);
            border-radius: 24px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .progress-circle {
            width: 100px; height: 100px;
            border-radius: 50%;
            background: conic-gradient(var(--success) <%= (stats.received / stats.total * 100) || 0 %>%, rgba(255,255,255,0.05) 0);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            margin-bottom: 15px;
            box-shadow: 0 0 20px rgba(34, 197, 94, 0.2);
        }

        .progress-circle::after {
            content: '<%= Math.round((stats.received / stats.total * 100)) || 0 %>%';
            position: absolute;
            width: 85px; height: 85px;
            background: #121214;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 900;
            font-size: 20px;
            color: var(--success);
        }

        /* Table Design */
        .table-wrapper {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        }

        table { width: 100%; border-collapse: collapse; }
        th {
            background: rgba(255,255,255,0.03);
            color: var(--text-muted);
            padding: 20px;
            font-size: 13px;
            text-align: center;
            border-bottom: 1px solid var(--border-color);
        }

        td {
            padding: 16px;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.02);
            font-size: 14px;
        }

        .status-badge {
            padding: 6px 16px;
            border-radius: 12px;
            font-weight: 800;
            font-size: 12px;
            display: inline-block;
        }

        .received-bg { background: rgba(34, 197, 94, 0.15); color: var(--success); border: 1px solid rgba(34, 197, 94, 0.2); }
        .pending-bg { background: rgba(239, 68, 68, 0.15); color: var(--danger); border: 1px solid rgba(239, 68, 68, 0.2); }

        @media (max-width: 900px) {
            .main-stats-container { grid-template-columns: 1fr; }
            .nav-header { flex-direction: column; gap: 15px; text-align: center; }
        }
    </style>
</head>
